{
  "manifest_version": 3,
  "name": "LinkedIn Job Saver",
  "version": "1.3",
  "description": "Save LinkedIn job descriptions to Google Sheets.",
  "permissions": ["scripting", "activeTab", "storage", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://script.google.com/*"]
}